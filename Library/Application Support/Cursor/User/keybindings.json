// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+t",
        "command": "-vscode-neovim.send",
        "when": "editorTextFocus && neovim.ctrlKeysNormal.t && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
    },
    {
        "key": "ctrl+t",
        "command": "-editor.action.transposeLetters",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        // Pass through q in normal mode, to get macros working
        "key": "q",
        "command": "vscode-neovim.send",
        "args": "q",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    {   // Next tab
        "key": "shift+l",
        "command": "workbench.action.nextEditor",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    {   // Previous tab
        "key": "shift+h",
        "command": "workbench.action.previousEditor",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    {
        // Split vertically
        "key": ", v",
        "command": "workbench.action.splitEditorRight",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    {
        // Split horizontally
        "key": ", s",
        "command": "workbench.action.splitEditorDown",
        "when": "editorTextFocus && neovim.mode != insert"
    },
    
    // Ctrl+n and Ctrl+p for completing keywords in Insert mode (*compl-generic*)
    // And Ctrl+j and Ctrl+k for navigating IntelliSense dropdowns
    {
        "key": "ctrl+n",
        "command": "vscode-neovim.send",
        "args": "<C-n>",
        "when": "editorTextFocus && neovim.mode == 'insert'"
      },
      {
        "key": "ctrl+p",
        "command": "vscode-neovim.send",
        "args": "<C-p>",
        "when": "editorTextFocus && neovim.mode == 'insert'"
    },
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible && textInputFocus"
    },
]
